SELECT
	E_LOC_NURSE_UNIT_DISP = UAR_GET_CODE_DISPLAY(E.LOC_NURSE_UNIT_CD)
	, E_LOC_ROOM_DISP = UAR_GET_CODE_DISPLAY(E.LOC_ROOM_CD)
	, E_LOC_BED_DISP = UAR_GET_CODE_DISPLAY(E.LOC_BED_CD)
	, E_ENCNTR_TYPE_CLASS_DISP = UAR_GET_CODE_DISPLAY(E.ENCNTR_TYPE_CLASS_CD)
	, E.REG_DT_TM
	, E.ENCNTR_ID
	, P.NAME_FULL_FORMATTED

FROM
	ENCOUNTER   E
	, ENCNTR_DOMAIN   ED
	, PERSON   P
; THIS DOES THE JOIN
PLAN E
JOIN ED
	WHERE E.ENCNTR_ID = ED.ENCNTR_ID
JOIN P
	WHERE P.PERSON_ID=E.PERSON_ID

WITH MAXREC = 1000, NOCOUNTER, SEPARATOR=" ", FORMAT